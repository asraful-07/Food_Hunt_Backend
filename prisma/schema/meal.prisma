model Meal {
  id          String   @id @default(uuid())
  providerId  String
  categoryId  String

  name        String
  description String?
  price       Float
  images      String[]
  stock       Int      @default(0)
  isAvailable Boolean  @default(true)
  averageRating       Float  @default(0.0)
  isDeleted   Boolean  @default(false)
  deletedAt   DateTime?

  dietaryPreferences String[]

  provider    ProviderProfile @relation(fields: [providerId], references: [id],  onDelete: Cascade, onUpdate: Cascade)
  category    Category        @relation(fields: [categoryId], references: [id],  onDelete: Cascade, onUpdate: Cascade)

  cartItems   CartItem[]
  wishItem    WishItem[]
  orderItems  OrderItem[]
  reviews     Review[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([providerId])
  @@index([categoryId])
  @@map("meal")
}
